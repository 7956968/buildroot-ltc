{
    "isp": {
        "ipu": "v2500",
        "args": {
            "mode": 4,
            "name": "OV2710",
            "config": "/root/.ispddk/config-normal.txt"
        },
        "port": {
            "out": {
                "w": 1920,
                "h": 1088,
                "pixel_format": "nv12",
                "fps":15,
                "bind": {"ispost": "in"}
            }
        }
    },

    "ispost": {
        "ipu": "ispostv2",
        "args": {
            "lc_grid_file_name1": "/root/.ispost/lc_v1_0-0-0-0_hermite32_1920x1088-1920x1088.bin",
            "lc_geometry_file_name1": "/root/.ispost/lc_v1_0-0-0-0_hermite32_1920x1088-1920x1088_geo.bin",
            "dn_enable": 1
        },
        "port": {
            "dn": {
                "w": 1920,
                "h": 1088,
                "pixel_format": "nv12",
                "bind": { "enc1080p": "frame" }
            },
            "ss1": {
                "w": 640,
                "h": 360,
                "pixel_format": "nv12",
                "bind": {
                    "encrecord": "frame"
                }
            }
        }
    },

    "enc1080p": { "ipu": "vencoder",
        "args": {
            "encode_type": "h264"
        }
    },
    "encrecord": { "ipu": "vencoder",
        "args": {
            "encode_type": "h264"
        }
    }
}

