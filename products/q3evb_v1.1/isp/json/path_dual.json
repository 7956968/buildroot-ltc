{
    "isp": {
        "ipu": "v2500",
        "args": {
            "skipframe": 1,
            "nbuffers": 3
        },
        "port": {
            "out": {
                "w": 1920,
                "h": 2176,
                "pixel_format": "nv12",
                "bind": { "ispost0": "in" }
            }
        }
    },

    "ispost0": {
        "ipu": "ispost",
        "args": {
            "dn_enable":1,
            "dn_target_index":0,
            "lc_grid_file_name1":"/root/.ispost/lc_v1_hermite32_1920x2176.bin"
        },
        "port": {
            "ol": {
                "pip_x":576,
                "pip_y":960
            },
            "ss0": {
                "w": 1920,
                "h": 1080,
                "pixel_format": "nv12",
                "bind": { "enc1080p": "frame" }
            },
            "dn": {
                "w": 1920,
                "h": 2176,
                "pixel_format": "nv12"
            },
            "ss1":{
                "w": 1280,
                "h": 720,
                "pixel_format": "nv12",
                "bind": { "display": "osd0" }
            }
        }
    },

    "enc1080p": { "ipu": "vencoder",
        "args": {
            "encode_type": "h265"
        }
    },
    "display": { "ipu": "ids", "args": { "no_osd1": 1 }}
}
