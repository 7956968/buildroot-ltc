 menu "IMAPX15 Machines"

 config MACH_IMAPX15
    bool "IMAPX15"
    select CPU_IMAPX15
	select ARM_GIC
    help
      Say Y here if you are using the IMAPX15

endmenu

config CPU_IMAPX15
    bool
    depends on ARCH_IMAPX15
    help
      Support for IMAPX15 Infotm Mobile CPU based systems.


config IMAPX15_FPGA_PLATFORM
    bool "imapx15 fpga test"
    depends on ARCH_IMAPX15
    default n
    help
       If you are operating on the FPGA platform, set Y here!

config FPGA_CPU_CLK
    int "FPGA cpu clock configure"
    depends on IMAPX15_FPGA_PLATFORM
    default "40000000"

config FPGA_EXTEND_CLK
    int "FPGA externel clock configure"
    depends on IMAPX15_FPGA_PLATFORM
    default "40000000"

config IMAPX15_DMA
    bool
    depends on ARCH_IMAPX15
    select PL330
    default y
    help
    imapx15 dma enable

config  FAKE_PM
        bool "Support for fake power manage"
        depends on ARCH_IMAPX15
        default n




