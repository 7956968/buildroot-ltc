 menu "IMAPX910 Machines"

 config MACH_IMAPX910
    bool "IMAPX910"
    select CPU_IMAPX910
	select ARM_GIC
    help
      Say Y here if you are using the IMAPX910

endmenu

config CPU_IMAPX910
    bool
    depends on ARCH_IMAPX910
    help
      Support for IMAPX910 Infotm Mobile CPU based systems.


config IMAPX910_FPGA_PLATFORM
    bool "imapx910 fpga test"
    depends on ARCH_IMAPX910
    default n
    help
       If you are operating on the FPGA platform, set Y here!

config FPGA_CPU_CLK
    int "FPGA cpu clock configure"
    depends on IMAPX910_FPGA_PLATFORM
    default "40000000"

config FPGA_EXTEND_CLK
    int "FPGA externel clock configure"
    depends on IMAPX910_FPGA_PLATFORM
    default "40000000"

config IMAPX910_DMA
    bool
    depends on ARCH_IMAPX910
    select PL330
    default y
    help
    imapx910 dma enable

config  FAKE_PM
        bool "Support for fake power manage"
        depends on ARCH_IMAPX910
        default n




