 menu "APOLLO3 Machines"

 config MACH_APOLLO3
    bool "Apollo3"
    select CPU_APOLLO3
	select ARM_GIC
    help
      Say Y here if you are using the APOLLO3

endmenu

config CPU_APOLLO3
    bool
    depends on ARCH_APOLLO3
    help
      Support for APOLLO3 Infotm Mobile CPU based systems.


config APOLLO3_FPGA_PLATFORM
    bool "APOLLO3 FPGA TEST"
    depends on ARCH_APOLLO3
    default n
    help
       If you are operating on the FPGA platform, set Y here!

config FPGA_CPU_CLK
    int "FPGA cpu clock configure"
    depends on APOLLO3_FPGA_PLATFORM
    default "40000000"

config FPGA_EXTEND_CLK
    int "FPGA externel clock configure"
    depends on APOLLO3_FPGA_PLATFORM
    default "40000000"

config FPGA_UART_CLK
	int "FPGA uart clock configure"
	depends on APOLLO3_FPGA_PLATFORM
	default "40000000"

config APOLLO3_DMA
    bool
    depends on ARCH_APOLLO3
    select PL330
    default y
    help
    apollo dma enable

config  FAKE_PM
        bool "Support for fake power manage"
        depends on ARCH_APOLLO3
        default n




