config BCMDHD_6212
	tristate "Broadcom FullMAC wireless cards support"
	---help---
	  This module adds support for wireless adapters based on
	  Broadcom FullMAC chipset.

config BCMDHD_FW_PATH
	depends on BCMDHD_6212
	string "Firmware path"
	default "/etc/firmware/fw_bcmdhd.bin"
	---help---
	  Path to the firmware file.

config BCMDHD_NVRAM_PATH
	depends on BCMDHD_6212
	string "NVRAM path"
	default "/etc/firmware/nvram.txt"
	---help---
	  Path to the calibration file.

config BCMDHD_CONFIG_PATH
	depends on BCMDHD_6212
	string "Config path"
	default "/etc/firmware/config.txt"
	---help---
	  Path to the driver configuration file.

config BCMDHD_WEXT
	bool "Enable WEXT support"
	depends on BCMDHD_6212 && CFG80211 = n
	select WIRELESS_EXT
	select WEXT_PRIV
	help
	  Enables WEXT support
config DHD_USE_STATIC_BUF
	bool "use static buf"
	default y
	help
	  Enables STATIC buf support

choice
	prompt "Enable Chip Interface"
	depends on BCMDHD_6212
	---help---
		Enable Chip Interface.
config BCMDHD_SDIO
		bool "SDIO bus interface support"
		depends on BCMDHD_6212 && MMC
config BCMDHD_PCIE
		bool "PCIe bus interface support"
		depends on BCMDHD_6212 && PCI
endchoice

choice
	depends on BCMDHD_6212 && BCMDHD_SDIO
	prompt "Interrupt type"
	---help---
		Interrupt type
config BCMDHD_OOB
	depends on BCMDHD_6212 && BCMDHD_SDIO
	bool "Out-of-Band Interrupt"
	default y
	---help---
		Interrupt from WL_HOST_WAKE.
config BCMDHD_SDIO_IRQ
	depends on BCMDHD_6212 && BCMDHD_SDIO
	bool "In-Band Interrupt"
	---help---
	  Interrupt from SDIO DAT[1]
endchoice
