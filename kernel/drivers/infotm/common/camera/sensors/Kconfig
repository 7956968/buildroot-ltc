if !MEDIA_SUBDRV_AUTOSELECT
config VIDEO_GC0308
	tristate "Glalory core  GC0308 sensor for demo"
	depends on I2C && VIDEO_V4L2 && VIDEO_V4L2_SUBDEV_API && INFOTM_CAMERA_SENSOR
	---help---
		This is a V4L2 sensor-level driver for the Gcore
		GC0308_DEMO  camera sensors.

config VIDEO_GC2035
