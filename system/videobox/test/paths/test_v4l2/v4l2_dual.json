{
	"v4l20": {
		"ipu": "v4l2",
		"args": {
			"driver":"uvcvideo",
			"model": "USB2.0 Camera",
			"pixfmt": "mjpeg"
		},
		"port": {
			"out": {
				"w": 640,
				"h": 480,
				"pixel": "mjpeg",
				"bind": { "sink": "in"}
			}
		}
	},

	"v4l21": {
		"ipu": "v4l2",
		"args": {
			"driver":"uvcvideo",
			"model": "Microsoft LifeCam VX-800",
			"pixfmt": "yuyv422"
		},
		"port": {
			"out": {
				"w": 640,
				"h": 480,
				"pixel": "yuyv422",
				"bind": { "pp0": "in"}
			}
		}
	},

	"pp0": {
		"ipu": "pp",
		"port": {
			"out": {
				"w": 800,
				"h": 480,
				"pixel": "nv12",
				"bind": { "display": "osd0"}
				}
			}
		},

	"sink": {
		"ipu": "filesink",
		"args": {
			"data_path": "/mnt/camera.mjpeg"
		}
	},

	"display": { "ipu": "ids"}
}

