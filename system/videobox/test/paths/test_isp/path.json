{
	"isp": {
		"ipu": "v2500",
		"args": {
			"mode": 4,
			"flip": 2,
			"name": "IMX179MIPI",
			"config": "/root/.ispddk/config-normal.txt"
		},
		"port": {
			"out": {
				"w": 1088,
                "h": 1088,
				"pip_x": 408,
				"pip_y": 0,
				"pip_w": 2448,
				"pip_h": 2448,
				"pixel": "nv12",
				"fps": 30
			},
			"cap": {
				"w": 3264,
				"h": 2432,
				"pip_x": 0,
				"pip_y": 0,
				"pip_w": 3264,
				"pip_h": 2448,	
				"bind": {"jpeg":"in"}
			}
		}
	},

	"marker0": {
		"ipu": "marker",
		"args": {
			"mode": "normal"
		},
		"port": {
			"out": {
				"w": 600,
				"h": 40,
				"pixel": "nv12",
				"bind": { "softlayer0": "ol0" }
			}
		}
	},

    "softlayer0":{
        "ipu": "softlayer",
        "port": {
            "ol0": {
                "pip_x":16,
                "pip_y":8
            },
            "out": {
                "w": 1088,
                "h": 1088,
                "pixel": "nv12",
                "bind": { 
                    "encavc0": "frame",
                    "encavc1": "frame"
                },
                "embezzle": {"isp": "out"}
            }
        }
    },


    "jpeg": { "ipu": "h1jpeg", "args": { "mode": "trigger"}},
    "encavc0": { "ipu": "vencoder",
		"args": {
			"encode_type": "h264"
		}
    },
    "encavc1": { "ipu": "vencoder",
		"args": {
			"encode_type": "h264"
		}
    }
}
