    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <TextView 
        android:id="@+id/text"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="@string/device_operate_script7"
    	android:textSize="@dimen/function_script_text_size"
    	android:layout_margin="5dip"
    	android:textColor="@color/black_control_dialog"/>
    <TextView 
        android:layout_width="340dip"
    	android:layout_height="190dip"
    	android:layout_gravity="center_horizontal"
    	android:layout_margin="4dip"
    	android:background="@drawable/device_preview_dialog_script1"/>
     <TextView 
        android:layout_width="340dip"
    	android:layout_height="190dip"
    	android:layout_margin="4dip"
    	android:layout_gravity="center_horizontal"
    	android:background="@drawable/device_playback_script"/>
</LinearLayout>
