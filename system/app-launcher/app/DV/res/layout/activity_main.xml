<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    tools:context=".MainActivity" >
    <RelativeLayout
        android:id="@+id/preview_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="80dip"
        android:foregroundGravity="clip_vertical|clip_horizontal" >

        <TextView
            android:id="@+id/txt_status_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="20dp"
            android:text=""
            android:textSize="20sp"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/preview_back1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:foregroundGravity="clip_vertical|clip_horizontal" >

            <SurfaceView
                android:id="@+id/sv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/demo"
                android:visibility="visible" />

            <com.danale.video.view.opengl.DanaleGlSurfaceView
                android:id="@+id/gl_sv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="visible" />
        </RelativeLayout>

         <ProgressBar
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
<!--          <TextView
            android:id="@+id/re_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_sync"
            android:layout_centerInParent="true"
            android:clickable="true"/>  -->
        <TextView
            android:id="@+id/error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone" />
    </RelativeLayout> 
    <!--add for debug  -->   
<!--     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"/> -->
    <include
        android:id="@+id/info_bar"
        android:clickable="true"
        layout="@layout/include_camera_chrome" 
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="80dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/blue_dark"
        android:gravity="center_horizontal">
         <ToggleButton
            android:id="@+id/img_shutter"
            android:layout_width="@dimen/height_shutter_btn"
            android:layout_height="@dimen/height_shutter_btn"
            android:background="@anim/shutter_circle"
            android:textOff=""
            android:textOn=""
            android:layout_centerVertical="true"/>
         <ImageButton
            android:id="@+id/img_burst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:layout_marginLeft="5dip"
            android:background="@null"
            android:src="@drawable/ic_take_photo_selector"
            android:layout_above="@id/img_shutter"
            android:layout_marginBottom="22dip"/>
         
           <ImageButton
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dip"
            android:background="@null"
            android:src="@drawable/btn_setting"
            android:scaleType="centerInside"
            android:layout_below="@id/img_shutter"
            android:layout_marginTop="22dip"/>
         
         <ImageButton
            android:id="@+id/img_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@drawable/btn_setting"
            android:scaleType="centerInside"
            android:layout_below="@id/img_more"
            android:visibility="gone"/>
         
        <ImageButton
            android:id="@+id/btn_sd_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_sd_record_selector"
			android:layout_below="@id/img_settings"
			android:visibility="gone"/>
        

        <ImageButton
            android:id="@+id/btn_live_video_audio"
            android:layout_width="@dimen/height_shutter_btn"
            android:layout_height="@dimen/height_shutter_btn"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/live_video_control_audio_selector" 
            android:layout_below="@id/btn_sd_record"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/btn_quality"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="0dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/video_quality_smooth"
            android:layout_below="@id/btn_live_video_audio"
            android:visibility="gone" />
		        
    </RelativeLayout>
    
    
        <RelativeLayout
        android:id="@+id/back"
        android:layout_width="50dip"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"><!--       android:background="@color/main_back_translate"  -->
         <ImageButton
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_back_button_selector"
            />        
    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_short_record"
        android:layout_width="@dimen/height_shutter_btn"
        android:layout_height="@dimen/height_shutter_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/info_bar"
        android:layout_marginLeft="16dp"
        android:alpha="0.8"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/live_video_control_record"
        android:visibility="gone"/>

</RelativeLayout>