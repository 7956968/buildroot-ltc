<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rg_regist_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_regist_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="邮箱注册" />

        <RadioButton
            android:id="@+id/rb_regist_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="手机注册" />
    </RadioGroup>

    <TextView 
        android:id="@+id/phone_code_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="点击设置国别码"
        android:padding="15dp"
        />
    
    <EditText
        android:id="@+id/et_regist_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="帐号" />

    <EditText
        android:id="@+id/et_regist_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_regist_code_active"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="激活码" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_regist_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发送验证码" />

        <Button
            android:id="@+id/btn_regist_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="注册" />
    </LinearLayout>

</LinearLayout>