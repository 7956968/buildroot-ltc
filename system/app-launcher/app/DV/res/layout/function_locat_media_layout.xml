<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
         android:id="@+id/select_all_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="3dip" 
        android:visibility="gone">
        	<CheckBox 
	     android:id="@+id/select_all_cb"
	     android:layout_width="32dip"
	      android:layout_height="32dip"
	      android:background="@drawable/checkbox_selector" 
	      android:button="@null" 
	      android:layout_alignParentRight="true"
	     android:layout_marginRight="5dip"/>
       <TextView 
	    android:id="@+id/select_all_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/black"
	    android:layout_toLeftOf="@id/select_all_cb"
	    android:text="@string/menu_select_all"
	    android:textSize="22sp"
	    android:padding="3dip"
	    android:gravity="center_vertical"/>
    </RelativeLayout>
        <View 
        android:layout_width="wrap_content"
        android:layout_height="1dip"
        android:background="@color/gray"/>
    <ListView android:id="@+id/local_file_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/gray"
        android:dividerHeight="1.0dip"
        android:animateLayoutChanges="true">
    </ListView>
</LinearLayout>
       <TextView 
	    android:id="@+id/no_media_data"
	    android:background="@color/white"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:textColor="@color/black"
	    android:text="@string/no_media_data"
	    android:textSize="22sp"
	    android:gravity="center"/>
</FrameLayout>
