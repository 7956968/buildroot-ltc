<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_add_device_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" 设备ID号" />

    <EditText
        android:id="@+id/et_add_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="设备别名" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_add_device_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="检查添加状态" />

        <Button
            android:id="@+id/btn_add_device_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加设备" />
    </LinearLayout>

   
    <TextView
        android:id="@+id/tv_add_device_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>