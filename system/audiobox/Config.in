config BR2_PACKAGE_AUDIOBOX
	bool "Audiobox"
	default y
	select BR2_PACKAGE_ALSA_LIB
	select BR2_PACKAGE_HLIBVCP7G
	help
	  Audiobox deal with QSDK audio issues

if BR2_PACKAGE_AUDIOBOX
    menu "boot speed config"
        config BR2_PACKAGE_AUDIOBOX_OPTIMIZATION
